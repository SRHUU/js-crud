{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
  {{#with data}}
  <div class="main__content">

    <h1 class="title title--center">Пошук плейлистів</h1>

    <form method="POST" action="/spotify-search" class="search">
      <img src="svg/spotify_search.svg">
      <input type="search" class="searc__input" placeholder="Введіть запит" name="value" value="{{value}}">
      <button class="search__button">Пошук</button>
    </form>

    <ul class="playlist__list">
      {{#each list}}

      <li class="playlist">
        <img src="{{image}}" alt="{{name}}" heigth="100px">

        <div class="playlist__content">
          <strong class="playlist__name">{{name}}</strong>
          <span class="playlist__amount">Кількість пісень: {{amount}}</span>
        </div>

        {{/each}}
    </ul>

  </div>
  {{/with}}
</main>



