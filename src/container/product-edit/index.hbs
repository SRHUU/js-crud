<main>
  <section>
    <h1 class="title">Редагування товару</h1>

    <div class="form">
      <h3 class="form__title">Інформація про товар</h3>

      <form method="POST" action="/product-edit">
        <div class="form__content">

          <div class="form__line">
            <div class="form__field">
              <label for="name" class="form__label">Назва товару</label>
              <input type="name" name="name" class="form__input" value="{{product.name}}">
            </div>

            <div class="form__field">
              <label for="price" class="form__label">Ціна</label>
              <input type="number" name="price" class="form__input" value="{{product.price}}">
            </div>

            <div class="form__field">
              <label for="id" class="form__label">ID</label>
              <input type="number" name="id" class="form__input" value="{{product.id}}">
            </div>
          </div>

          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__input form__hight"
              value="{{product.description}}">
            <p class="form__comment">Відображується у картці товару</p>
          </div>

          <div class="form__line-button">
            <button class="form__button form--button-color-blue">Зберегти оновлення</button>
            <a href="/product-delete?id={{product.id}}" class="form__button form--button-color-red">Видалити
              товар</a>
          </div>

        </div>
      </form>
    </div>



  </section>


</main>



